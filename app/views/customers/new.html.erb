<h1>Sign Up!</h1>
<p> </p>

<div>
  <%= form_for @customer do |f| %>
    <div>
      <%= f.label :name, "Name"%>
      <%= f.text_field :name %>
    </div>

    <div>
      <%= f.label :email, "E-mail"%>
      <%= f.text_field :email %>
    </div>

    <div>
      <%= f.label :password, "Password"%>
      <%= f.password_field :password %>
    </div>

    <div>
      <%= f.label :password_confirmation, "Password Confirmation" %>
      <%= f.password_field :password_confirmation %>
    </div>

    <div>
      <%= f.submit 'Sign up!' %>
    </div>
  <% end %>
</div>
