<!DOCTYPE html>
<html>
<head>
  <title>SeatYourself</title>
  <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track' => true %>
  <%= javascript_include_tag 'application', 'data-turbolinks-track' => true %>
  <%= csrf_meta_tags %>
</head>

<header>
  <div>
    <% if current_customer %>
      logged in as <%= current_customer.name %>
      <%= link_to 'Sign out', session_path(session[:customer_id]), method: :delete%>

    <% else %>
      <%= link_to 'Sign up', new_customer_path, class: "btn"%>
      <%= link_to 'Log in', new_session_path, class: "btn" %>
    <% end %>

  </div>
</header>
<body>
    <%= yield %>

</body>
</html>
