<!DOCTYPE html>
<html>
<head>
  <title>SeatYourself</title>
  <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track' => true %>
  <%= javascript_include_tag 'application', 'data-turbolinks-track' => true %>
  <%= csrf_meta_tags %>
</head>

<body>
  <header id="header">
    <div id="logo">
    <%= link_to 'SY', restaurants_path %>
  </div>
  <nav id="main-menu">
    <% if current_customer %>
    <div class="btn">  Hi, <%= current_customer.name%></div>

      <%= link_to 'Sign out', session_path(session[:customer_id]), method: :delete, class: "btn"%>

      <%= link_to 'View User Profile', customer_path(current_customer), class: "btn"%>

    <% else %>
    <div class="nav_link">
      <%= link_to 'Sign up', new_customer_path%>
    </div>

    <div class="nav_link">
      <%= link_to 'Log in', new_session_path%>
    </div>
    <% end %>
  </nav>
</header>

<div class='flash_notices'>
<% if flash[:notice] %>
  <p id='notice'>
    <%= flash[:notice] %></p>
<% end %>
<% if flash[:alert] %>
  <p id="alert"><%= flash[:alert] %></p>
  <% end %>
</div>

<%= yield %>

<footer id="footer">
  <ul>
    <li><a href="#">About Us</a></li>
    <li><a href="#">Careers</a></li>
    <li><a href="#">Blog</a></li>
    <li><a href="#">Contact Us</a></li>
  </ul>

  <div class="social_container">
    <h3 class="social_title"> Let's be Social</h3>
    <ul>
      <li><i class="fa fa-facebook" aria-hidden="true"></i></li>
      <li><i class="fa fa-instagram" aria-hidden="true"></i></li>
      <li><i class="fa fa-twitter" aria-hidden="true"></i></li>
    </ul>
  </div>
</footer>

</body>
</html>
